{
  "name": "LEGO EV3 Local",
  "version": "4.0.0",
  "description": "Локальное управление EV3 через WebSerial API (без сервера)",
  "manifest_version": 3,
  "permissions": [
    "serial"
  ],
  "host_permissions": [
    "*://*.turbowarp.org/*",
    "*://*.scratch.mit.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.turbowarp.org/*",
        "https://*.scratch.mit.edu/*"
      ],
      "js": ["ev3-full.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ev3-full.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
